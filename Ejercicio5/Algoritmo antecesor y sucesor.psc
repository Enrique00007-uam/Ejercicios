Proceso sin_titulo
	Definir numero1, antecesor, sucesor Como Entero;
	Escribir 'Escriba el numero del que desea saber su antecesor y sucesor ';
	Leer numero1;
	antecesor <- numero1-1;
	sucesor <- numero1+1;
	Escribir 'El antecesor de su numero es: ', antecesor;
	Escribir 'El sucesor de su numero es: ', sucesor;
FinProceso
